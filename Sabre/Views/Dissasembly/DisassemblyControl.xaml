<UserControl x:Class="Sabre.Views.Disassembly.DisassemblyControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
			 xmlns:local="clr-namespace:Sabre.Utility"
             local:VsTheme.UseVsTheme="True"
			 mc:Ignorable="d"
			 d:DesignHeight="300" d:DesignWidth="627.493"
			 Name="MyToolWindow">
	<Grid>
		<ListView x:Name="m_DismView" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.IsContainerVirtualizable="True" SizeChanged="DismView_SizeChanged">
			<ListView.View>
				<GridView AllowsColumnReorder="true" >
					<GridViewColumn DisplayMemberBinding="{Binding Path=m_Address}" Width="200"/>
					<GridViewColumn DisplayMemberBinding="{Binding Path=m_Bytes}" Width="200"/>
					<GridViewColumn DisplayMemberBinding="{Binding Path=m_Info}" Width="Auto"/>
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</UserControl>
